+const { ethers } = require("hardhat");
+require("dotenv").config();
+
+async function main() {
+  const timelockAddr = process.env.TIMELOCK_ADDRESS;
+  const vaultAddr = process.env.VAULT_ADDRESS;
+  if (!timelockAddr || !vaultAddr) {
+    console.error("Set TIMELOCK_ADDRESS and VAULT_ADDRESS in env");
+    return;
+  }
+  const provider = new ethers.providers.JsonRpcProvider(process.env.BASE_RPC);
+  const wallet = new ethers.Wallet(process.env.PRIVATE_KEY, provider);
+  const timelock = await ethers.getContractAt("TimelockController", timelockAddr);
+
+  const iface = new ethers.utils.Interface(["function updateFees(uint256)"]);
+  const data = iface.encodeFunctionData("updateFees", [1500]); // 15%
+
+  const delay = parseInt(process.env.TIMELOCK_DELAY || "86400");
+  const predecessor = ethers.constants.HashZero;
+  const salt = ethers.utils.id("schedule-example-1");
+
+  const tx = await timelock.connect(wallet).schedule(vaultAddr, 0, data, predecessor, salt, delay);
+  await tx.wait();
+  console.log("Scheduled. Salt:", salt);
+}
+
+main().catch(console.error);

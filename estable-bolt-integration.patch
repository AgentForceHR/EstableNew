+// Deploy TimelockController, VaultFactory, and an example StableVault via factory.
+// Requires environment variables set in bolt_integration/.env or system env:
+// PRIVATE_KEY, BASE_RPC, TREASURY_ADDRESS, TIMELOCK_DELAY
+const { ethers } = require("hardhat");
+require("dotenv").config();
+
+async function main() {
+  const provider = new ethers.providers.JsonRpcProvider(process.env.BASE_RPC);
+  const wallet = new ethers.Wallet(process.env.PRIVATE_KEY, provider);
+  console.log("Using deployer:", wallet.address);
+
+  // Deploy TimelockController
+  const minDelay = parseInt(process.env.TIMELOCK_DELAY || "86400"); // default 24h
+  const Timelock = await ethers.getContractFactory("TimelockController");
+  console.log("Deploying TimelockController...");
+  const timelock = await Timelock.connect(wallet).deploy(minDelay, [wallet.address], [ethers.constants.AddressZero]);
+  await timelock.deployed();
+  console.log("TimelockController:", timelock.address);
+
+  // Deploy VaultFactory
+  const treasury = process.env.TREASURY_ADDRESS;
+  if (!treasury || treasury.length < 10) {
+    throw new Error("Set TREASURY_ADDRESS in env");
+  }
+  const Factory = await ethers.getContractFactory("VaultFactory");
+  console.log("Deploying VaultFactory...");
+  const factory = await Factory.connect(wallet).deploy(treasury, timelock.address);
+  await factory.deployed();
+  console.log("VaultFactory:", factory.address);
+
+  // Optionally create an example StableVault via factory if ASSET provided
+  const asset = process.env.VAULT_ASSET_ADDRESS;
+  if (asset && asset.length > 10) {
+    const name = "Estable StableVault (Example)";
+    const symbol = "esSTBL";
+    const minDeposit = ethers.BigNumber.from("100000000"); // 100 * 1e6
+    console.log("Creating example vault via factory...");
+    const tx = await factory.connect(wallet).createVault(asset, minDeposit, name, symbol);
+    const receipt = await tx.wait();
+    console.log("CreateVault tx:", receipt.transactionHash);
+  } else {
+    console.log("No VAULT_ASSET_ADDRESS set; skipping example vault creation.");
+  }
+
+  console.log("All done. Timelock:", timelock.address, "Factory:", factory.address);
+}
+
+main().catch((err) => {
+  console.error(err);
+  process.exit(1);
+});

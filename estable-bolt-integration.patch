+const fs = require("fs");
+const path = require("path");
+
+async function main() {
+  const artifactsDir = "./artifacts/contracts";
+  const outDir = "./bolt_integration/abis";
+  if (!fs.existsSync(outDir)) fs.mkdirSync(outDir, { recursive: true });
+  const contracts = ["StableVaultTimelock", "VaultFactory", "TimelockController", "MorphoVaultTimelock", "MultiStrategyVaultTimelock", "RebalanceManagerTimelock"];
+  for (const name of contracts) {
+    const file = `${artifactsDir}/${name}.sol/${name}.json`;
+    if (!fs.existsSync(file)) {
+      console.warn("Artifact missing for", name, "- compile first");
+      continue;
+    }
+    const json = JSON.parse(fs.readFileSync(file));
+    fs.writeFileSync(path.join(outDir, `${name}.json`), JSON.stringify(json.abi, null, 2));
+    console.log("Exported ABI for", name);
+  }
+}
+
+main().catch(console.error);
